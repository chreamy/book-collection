<h1>Book Collection</h1>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price) %></td>
        <td><%= book.published_date.strftime("%B %-d, %Y") if book.published_date %></td>
        <td>
          <%= link_to 'Show', book_path(book) %> |
          <%= link_to 'Edit', edit_book_path(book) %> |
          <%= link_to 'Delete', delete_book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Book', new_book_path %>
